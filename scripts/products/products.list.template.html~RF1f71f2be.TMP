<style type="text/css">
    .my-col-xc {
        padding-left: 5px;
        padding-right: 5px;
    }

    @media only screen and (min-height: 950px) {
        .col-xs-2 {
            width: 60px;
        }

        .col-xs-6 {
            width: 55%;
        }
    }
</style>

<div class="scrollable-content" ui-scroll-bottom='bottomReached()'>
    <div class="list-group">
        <div class="list-group-item" ng-repeat="product in basket.products track by $index">
            <div class="row">
                <div id="col1" style="padding-top: 5px" class="col-xs-2 my-col-xc">
                    <img width="40" height="40" src="http://icons.iconarchive.com/icons/iloveicons.ru/so-sweet/128/tart-icon.png" class="img-circle">
                </div>
                <div class="col-xs-6 my-col-xc">
                    <p>{{product.Name}}</p>  Price: {{product.Price.Price | currency:product.Price.CurrencyCode}}
                </div>
                <div class="col-xs-4 my-col-xc">
                    <div style="padding-top: 15px" class="pull-right">
                        <a ng-class="{'disabled-control':!product.decControlEnabled, 'control':product.decControlEnabled}"
                           ng-disabled="!product.decControlEnabled"
                           ng-click="decPosition(product)"
                           ng-show="product.orderLine.Qty">
                            <i class="fa fa-minus"></i>
                        </a>
                        <span style="margin: 20px">{{product.orderLine.Qty}}</span>
                        <a ng-class="{'disabled-control':!product.incControlEnabled, 'control':product.incControlEnabled}"
                           ng-disabled="!product.incControlEnabled"
                           ng-click="incPosition(product)">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <a class="btn btn-block btn-lg btn-primary scrollable-footer navbar-app" href="#order/{{order.Id}}" ng-show="basket.pickedCount">
            <i class="fa fa-shopping-cart"></i>
            Order
        </a>
    </div>
</div>
